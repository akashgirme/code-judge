{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@code-judge/api-hooks": ["libs/api-hooks/src/index.ts"],
      "@code-judge/common": ["libs/common/src/index.ts"],
      "@code-judge/core-design": ["libs/core-design/src/index.ts"],
      "@code-judge/ui": ["libs/ui/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
